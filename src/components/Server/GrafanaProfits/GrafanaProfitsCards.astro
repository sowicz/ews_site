---

<div class="grid grid-cols-1 sm:grid-cols-2 gap-8 p-8 xl:px-64">
  {benefits.map((benefit, index) => (
    <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200 space-y-4 benefit-card" >
      <div class="flex items-center justify-center bg-emerald-200 text-emerald-500 w-10 h-10 rounded-full text-xl font-bold mx-auto">
        {index + 1}
      </div>
      <h3 class="font-semibold text-lg text-center text-gray-700">{benefit.title}</h3>
      <p class="text-gray-500">{benefit.description}</p>
    </div>
  ))}
</div>


<style>
  .benefit-card {
    transform: translateX(5%);
    transition: transform 1s ease-out, opacity 0.5s ease-out;
    opacity: 0;
  }

  .benefit-card.slide-in {
    transform: translateX(0);
    opacity: 1;
  }
</style>